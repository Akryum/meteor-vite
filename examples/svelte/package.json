{
  "name": "svelte-example",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "postinstall": "npm run build:dependencies",
    "build": "meteor build ../output/svelte --directory",
    "meteor-vite-internal:setup-env": "cross-env-shell METEOR_PACKAGE_DIRS=\"../../packages/\" BUILD_METEOR_VITE_DEPENDENCY='true'",
    "meteor-vite-internal:start": "npm run meteor-vite-internal:setup-env meteor npm start"
  },
  "dependencies": {
    "@babel/runtime": "^7.20.6",
    "meteor-node-stubs": "^1.2.5",
    "svelte": "^3.59.2"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.4.2",
    "@tsconfig/svelte": "^5.0.0",
    "meteor-vite": "file:../../npm-packages/meteor-vite",
    "svelte-check": "^3.4.6",
    "svelte-preprocess": "^5.0.4",
    "typescript": "^5.1.6",
    "vite": "^4.4.3"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.ts",
      "server": "server/main.ts"
    },
    "viteConfig": ".vite.config.mts",
    "testModule": "tests/main.js"
  }
}
